<div ng-app="workshopIS" ng-controller="CallCentreController" ng-init="onInit()">
    <div class="container my-container">
        <div class="row my-row">
            <div class="col-xs-12">
                <ul class="list-group">
                    <li class="list-group-item" ng-repeat="customer in allCustomers | orderBy: ['firstName', 'surname']">
                        <div class="row">
                            <div class="col-xs-12 col-md-2">

                                <div class="row">
                                    <div class="col-xs-6 col-md-12">
                                        <p>{{customer.firstName}} {{customer.surname}}</p>
                                    </div>

                                    <div class="col-xs-6 col-md-12">
                                        <span class="my-contact-state">{{customer.contactState | state}}</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-6 col-md-5">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <p>Partner<br /></p>
                                        <p>ID: {{customer.partnerId}}.<br /></p>
                                    </div>
                                    <div class="col-xs-9">
                                        <p>Loans<br /></p>
                                        <p ng-repeat="loan in customer.loans">
                                            Amount: {{loan.amount}}. Duration: {{loan.duration}}.<br />
                                        </p>
                                        <p>Total: {{customer.total}}<br /></p>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-6 col-md-5">
                                <div class="pull-right">
                                    <div class="radio">
                                        <label><input type="radio" ng-model="customer.contactState" value="0" name="optradio">Not yet contacted</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" ng-model="customer.contactState" value="2" name="optradio">Accepted</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" ng-model="customer.contactState" value="3" name="optradio">Rejected</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" ng-model="customer.contactState" value="1" name="optradio">Couldn't make contact</label>
                                    </div>
                                    <button class="btn btn-primary">Save</button>  
                                </div>
                            </div>

                        </div>
                    </li>
                    @*<li ng-if="sortCustomers === 'state'" class="list-group-item" ng-repeat="customer in allCustomers | orderBy: 'contactState'">
                            <p>{{customer.firstName}} {{customer.surname}}</p>
                            <p>
                                Partner ID: {{customer.partnerId}}.
                                <br />State: {{customer.contactState | state}}
                            </p>
                        </li>*@
                    @*<li ng-if="fromHighest" class="list-group-item" ng-repeat="partner in models.partners | orderBy:'-totalIncome'">{{partner.name}}<span class="badge">{{ partner.totalIncome | currency:'' }} Kč</span></li>*@
                </ul>
            </div>
        </div>
    </div>
</div>