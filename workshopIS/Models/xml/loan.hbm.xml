<?xml version="1.0" encoding="utf-8" ?>
<!-- This file should be set to an embedded resource -->
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="workshopIS.Models" assembly="workshopIS">
  <class name="CLoan" table="loan">
    <!-- A 32 hex character is our surrogate key. It's automatically generated by NHibernate with the UUID pattern. -->
    <id name="Id">
      <column name="Id"/>
      <generator class="increment"/>
    </id>

    <property name="Amount" />

    <property name="Duration" />

    <property name="Note" />

    <property name="Interest" />

    <property name="MonthlyCharge" />
    
    <property name="APR" />

    <many-to-one name="Customer" column="CustomerID" cascade="save-update"  />

  </class>
</hibernate-mapping>