<!DOCTYPE html>
<html ng-app="workshopIS" ng-controller="MainController">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title ng-bind="models.section">{{ models.section }}</title>
</head>
<body>
    <nav ng-if="models.section !== models.title" class="navbar navbar-default navbar-fixed-top my-navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p class="navbar-brand my-big-header">{{ models.section }}</p>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li ng-repeat="link in models.links">
                        <a ng-href="{{link.href}}" ng-click="models.section=link.sectionName">{{ link.name}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div ng-if="models.section ===  models.title" class="my-full-container">
        <div ng-repeat="n in [0,1,2,3]" class="my-4th-section">
            <div class="my-vcenter-outer">
                <div class="my-vcenter-inner">
                    <a class="my-section-link" ng-href="{{models.links[n].href}}" ng-click="models.section=models.links[n].sectionName">{{ models.links[n].sectionName}}</a>
                </div>
            </div>
        </div>
    </div>
    <div ng-view></div>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>

    @Scripts.Render("~/bundles/workshopIS")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</body>
</html>